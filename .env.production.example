# Environment variables for PRODUCTION environment
# Copy this file to .env.production and configure with SECURE values
# IMPORTANT: Never commit .env.production to git!

# Database Configuration - CHANGE THESE!
POSTGRES_USER=qiwi_prod_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_VERY_STRONG_PASSWORD_123!@#

# Application
ASPNETCORE_ENVIRONMENT=Production
TZ=Europe/Istanbul

# API Settings
API_PORT=5000

# Security - Generate strong random keys!
JWT_SECRET=CHANGE_THIS_TO_RANDOM_256_BIT_KEY
ENCRYPTION_KEY=CHANGE_THIS_TO_RANDOM_256_BIT_KEY

# Logging
LOG_LEVEL=Warning

# Performance
MAX_POOL_SIZE=100
MIN_POOL_SIZE=10

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Domain (if using nginx)
DOMAIN=yourdomain.com
SSL_EMAIL=admin@yourdomain.com
